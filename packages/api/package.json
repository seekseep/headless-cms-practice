{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/dev.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node22 ./src/lambda.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello",
    "deploy": "run-s build zip update"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0",
    "tsx": "^4.21.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "aws-service": "file:../aws-service",
    "core": "file:../core",
    "dotenv": "^17.2.4",
    "hono": "^4.11.9"
  }
}
